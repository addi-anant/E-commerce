<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= heading %></title>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <script
      src="https://kit.fontawesome.com/e0013384a5.js"
      crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar.ejs', {user: user}) %>

    <!-- login page code -->
    <div class="login-outer">
      <div class="login-container">
        <div class="login-header">
          <h2>Forgot Password</h2>
        </div>
        <form class="login-credential">
          <div>
            <i class="fa-solid fa-envelope"></i>
            <input
              id="update-email"
              type="email"
              placeholder="Email"
              required
              autocomplete="off" />
          </div>
          <button type="button" class="form-btn" id="update-btn">update</button>

          <p class="info" id="client-info"></p>
          <p class="error" id="client-error"></p>
        </form>
        <hr />
        <div class="wrapper">
          <p>
            New to E-commerce? <a href="/auth/register" class="link">Sign-up</a>
          </p>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
    <script type="text/javascript" src="/js/form.js"></script>
  </body>
</html>
