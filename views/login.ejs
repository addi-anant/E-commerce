<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <script
      src="https://kit.fontawesome.com/e0013384a5.js"
      crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar.ejs', {user: user}) %>

    <!-- login page code -->
    <div class="login-outer">
      <div class="login-container">
        <div class="login-header">
          <h2>Sign-in</h2>
          <p>Welcome Back!</p>
        </div>
        <form class="login-credential" method="post" action="/auth/login">
          <div>
            <i class="fa-solid fa-envelope"></i>
            <input name="email" type="email" placeholder="Email" />
          </div>
          <div>
            <i class="fa-solid fa-lock"></i>
            <input name="password" type="password" placeholder="Password" />
          </div>

          <!-- Email/Password Required -->
          <% if (required) { %>
          <p>both Email and Password are required!</p>
          <% } %>

          <!-- Invalid Email/Password -->
          <% if (invalid) { %>
          <p>Invalid Email/Password!</p>
          <% } %>

          <button class="form-btn" type="submit">Login</button>
        </form>
        <hr />
        <div class="exist">
          <p>
            New to E-commerce? <a href="/auth/register" class="link">Sign-up</a>
          </p>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
